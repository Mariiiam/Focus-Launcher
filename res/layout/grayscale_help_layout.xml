<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/grayscale_help_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/help_margin"
                android:layout_marginEnd="@dimen/help_margin"
                android:layout_marginTop="@dimen/help_marginTop_title"
                android:text="@string/grayscale_tile"
                android:textSize="@dimen/help_title_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/grayscale_help_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/help_margin"
                android:layout_marginEnd="@dimen/help_margin"
                android:layout_marginTop="@dimen/help_marginTop_text"
                android:text="@string/grayscale_help_text"
                android:textSize="@dimen/help_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/grayscale_help_title" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/grayscale_help_text"
                android:layout_marginTop="@dimen/help_marginTop_text"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_grayscale1"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:src="@drawable/img_grayscale_help1" />

                    <ImageView
                        android:id="@+id/img_grayscale2"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:src="@drawable/img_grayscale_help2"/>

                    <ImageView
                        android:id="@+id/img_grayscale3"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:src="@drawable/img_grayscale_help3"/>

                    <ImageView
                        android:id="@+id/img_grayscale4"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:src="@drawable/img_grayscale_help4"/>
                </LinearLayout>
            </HorizontalScrollView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>